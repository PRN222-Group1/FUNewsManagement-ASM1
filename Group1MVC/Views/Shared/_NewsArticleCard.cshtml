<div class="col-md-4 mb-5">
    <div class="card h-100 d-flex flex-column">
        <div class="card-body d-flex flex-column">
            <h5 class="card-title">@Model.Headline</h5>
            <h6 class="card-subtitle mb-2 text-muted">@Model.NewsTitle</h6>

            <!-- Add this div to push the info section to the bottom -->
            <div class="mt-auto">
                <p class="text-muted">Category: @Model.CategoryName</p>
                <p class="text-muted">Author: @Model.AuthorName</p>
                <p class="text-muted">Created: @Model.CreatedDate?.ToString("MM/dd/yyyy")</p>
            </div>
        </div>
        <div class="card-footer">
            <a class="btn btn-info btn-sm" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
        </div>
    </div>
</div>
