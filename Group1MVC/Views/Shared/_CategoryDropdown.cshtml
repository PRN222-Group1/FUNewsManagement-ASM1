@model Group1MVC.ViewModels.FilterViewModel

<div class="form-group d-flex align-items-center">
    <label for="CategoryId">Category: </label>
    <select name="CategoryId" class="form-control" asp-for="@Model.SelectedCategory" onchange="this.form.submit();">
        <option value="">-- Select a Category --</option>
        @foreach (var option in @Model.Categories)
        {
            <option value="@option.Id">@option.CategoryName</option>
        }
    </select>
</div>