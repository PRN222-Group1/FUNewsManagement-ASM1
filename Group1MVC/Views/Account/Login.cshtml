@model RepositoryLayer.Specifications.Account.LoginPayload


@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>
    <div class="login-container">
        <h4>Login</h4>
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
        }
        <hr />
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-4">
                <label asp-for="AccountEmail" class="form-label text-dark font-weight-bold">Email</label>
                <input asp-for="AccountEmail" class="form-control p-3 rounded border" type="email" placeholder="Please enter email" />
                <span asp-validation-for="AccountEmail" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="AccountPassword" class="form-label text-dark font-weight-bold">Password</label>
                <input asp-for="AccountPassword" class="form-control p-3 rounded border" type="password" placeholder="Please enter password" />
                <span asp-validation-for="AccountPassword" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Login" class="btn btn-custom w-100" />
            </div>
        </form>
    </div>
</body>
</html>
